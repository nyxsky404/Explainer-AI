generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PodcastStatus {
  processing
  scraping
  scraped
  generating_script
  script_generated
  generating_audio
  completed
  failed
}

model User {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  password         String
  resetToken       String?
  resetTokenExpiry DateTime?
  monthlyLimit     Int       @default(10)
  currentUsage     Int       @default(0)
  usageResetDate   DateTime  @default(now())
  lastLogin        DateTime  @default(now())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  podcasts Podcast[]
}

model Podcast {
  id            String        @id @default(uuid())
  userId        String
  blogUrl       String
  scrapedText   String?       @db.LongText
  script        String?       @db.LongText
  audioUrl      String?
  status        PodcastStatus @default(processing)
  progress      Int           @default(0)
  audioDuration Float? 
  errorMessage  String?
  failedAt      DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id])
}
